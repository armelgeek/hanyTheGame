{% for type, messages in app.session.flashbag.all() %}
    {% for message in messages %}
        <div class="mt-3 mb-3">
            <div class="row">
                <div class="col-md-12 col-lg-12 col-12">

                    <div class="alert alert-{{ type }}">
                        {{message}}
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
{% endfor %}
