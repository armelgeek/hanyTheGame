{% extends('user-base.html.twig') %}

{% block body %}
 <div class="row" style="margin-top:125px">
                <div class="col-lg-offset-4 col-md-offset-3 col-sm-offset-3 col-xs-offset-0 col-xs-12 col-sm-6 col-lg-4">
                    <div class="box">
                        <div class="content-main">
                         
				<h1>Renouvellement du mot de passe</h1>
				{{form_start(form)}}
				<div class="form-group">
                    {{form_label(form.plainPassword,"Mot de passe")}}
                   {{form_widget(form.plainPassword.first)}}
                </div>
				<div class="form-group">
				 {{form_label(form.plainPassword,"Confirmation du mot de passe")}}
				 {{form_row(form.plainPassword.second)}}
				</div>
				<button class="btn btn-accent btn-block"  type="submit">Envoyer</button>
				{{form_end(form)}}

			</div>
		</div>
	</div>
	</div>
{% endblock %}
